<div class='container'>
  <div class='well'>
    <dl class='dl-horizontal'>
      <dt>Username:</dt>
      <dd><%= @user.username %></dd>
    </dl>
    <dl class='dl-horizontal'>
      <dt>Location:</dt>
      <dd><%= @user.location %></dd>
    </dl>
    <dl class='dl-horizontal'>
      <dt>Favorite Team:</dt>
      <dd><%= @user.favorite_team %></dd>
    </dl>
  </div>
  <% if @user.posts.first %>
    <h5><%= @user.username %>'s Submission</h5>

    <div class='well'>
      <dl class='dl-horizontal'>
          <dt>Championship Winner:</dt>
            <dd><%= @user.posts.first.winner %></dd>
          </br>
          <dt>Playoff Picks:</dt>
            <dd>
              <ol>
                  <li> <%= @user.posts.first.seed_one %> </li>
                  <li> <%= @user.posts.first.seed_two %> </li>
                  <li> <%= @user.posts.first.seed_three %> </li>
                  <li> <%= @user.posts.first.seed_four %> </li>
              </ol>
            </dd>
        </dl>
    </div>
  <% end %>
</div>